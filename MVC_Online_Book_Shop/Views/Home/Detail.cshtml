<body ng-app="MyApp">
    <div class="product-detail-container" ng-controller="ProductController" ng-repeat="product in detail">

        <div class="product-info">

            <div class="col-left">

                <div class="product-img">
                    <img src="{{product.Image_url}}" alt="" srcset="">
                </div>

            </div>

            <div class="col-right">

                <div class="product-title">
                    <span>{{product.Product_title}}</span>
                </div>

                <span class="updateAt">[Cập nhật gần nhất: {{product.Created_date_time}}]</span>

                <span class="author">Tác giả: {{product.Author}}</span>

                <span class="status">Tình trạng: Phát hành hàng tuần</span>

                <span class="amount-chapter">Số chương: Đang cập nhật</span>

                <span class="view-count">Lượt xem: Đang cập nhật</span>

                <span class="rate">
                    Đánh giá:
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                    <i class="far fa-star"></i>
                </span>

                <span class="category">Thể loại: <b>Action, Drama, Romance, School Life, Shounen</b></span>

                <div class="product-desc">
                    <hr>
                    <span>
                        {{product.Description}}
                    </span>
                    <i class="fas fa-info-circle icon"></i>
                </div>


                <div class="btn-container">

                    <div class="btn-readToStart">
                        <i class="fas fa-book icon"></i> Đọc từ đầu
                    </div>

                    <div class="btn-follow">
                        <i class="far fa-bookmark icon"> Yêu thích</i>
                    </div>

                    <div class="btn btn-buy" ng-click="addToCart(product)">
                        <i class="fas fa-shopping-cart" ></i> Đặt mua trọn bộ
                    </div>
                </div>

            </div>


        </div>

