
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cart</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Public/css/cart.css" rel="stylesheet" />
    
</head>
<body ng-app="CartApp">
    <div class="container" ng-controller="CartController">
        <article class="card">
            <div class="card-body">
                <div class="track">
                    <div class="step active"> <span class="icon"> <i class="fa fa-check"></i> </span> <span class="text">Giỏ hàng</span> </div>
                    @*<div class="step active"> <span class="icon"> <i class="fa fa-user"></i> </span> <span class="text"> </span> </div>*@
                    <div class="step"> <span class="icon"> <i class="fa fa-truck"></i> </span> <span class="text">Vận chuyển thanh toán </span> </div>
                    <div class="step"> <span class="icon"> <i class="fa fa-box"></i> </span> <span class="text">Xác nhận</span> </div>
                </div>
            </div>
            @*<div class="cart-title">Shopping Cart</div>*@
            <ul class="shopping-cart">
                <li class="card-list">
                    <div style="margin:30px 20px; color: #000;"><h4><b><a href="/">Trang chủ</a> > Shopping Cart</b></h4></div>
                    <table class="table table-striped m-table">
                        <tbody>
                            <tr ng-repeat="product in orders">
                                <td style="width: 100px; height: 100px"><img style="width: 90px; height: 100px" src="{{product.Image_url}}" /></td>
                                <td>
                                    <h4 style="margin-top: 20px"><label>{{product.Product_title}}</label></h4> @*Tên sản phẩm*@
                                    <h5 class="product-price">{{product.Price}}đ</h5> @*Giá bán*@
                                </td>
                                <td style="line-height: 90px; font-size: 20px; float: right; margin-right: 20px"><i ng-click="Delete(product); minusTotal(product.Price)" class="far fa-trash-alt"></i></td>
                            </tr>
                        </tbody>
                    </table>
                </li>
                <li class="card-address-details">
                    <div style="margin:40px 20px"><h3><b>Address Details</b></h3></div>
                    <form>
                        <div class="form-group col-md-12">
                            <label for="inputAddress">Fullname</label>
                            <input type="text" class="form-control" id="inputAddress" placeholder="Nguyễn Anh Tuấn">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputAddress">Phone number</label>
                            <input type="text" class="form-control" id="inputAddress" placeholder="+84...">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputAddress2">Email</label>
                            <input type="text" class="form-control" id="inputAddress2" placeholder="abc@gmail.com">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputCity">City</label>
                                <select id="inputCity" class="form-control">
                                    <option selected>Choose...</option>
                                    <option>...</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputState">State</label>
                                <select id="inputState" class="form-control">
                                    <option selected>Choose...</option>
                                    <option>...</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputAddress">Address</label>
                            <input type="text" class="form-control" id="inputAddress" placeholder="Đội 4, Thôn Đạo Khê,...">
                        </div>

                    </form>
                </li>
                <li class="card-details">
                    <div style="margin:40px 20px"><h3><b>Checkout</b></h3></div>

                    <h4 class="col-md-12">Tổng tiền: <span style="float:right">{{total}}đ</span></h4>
                    <h4 class="col-md-12">Phí vận chuyển: <span style="float:right">20000đ</span></h4>
                    <h4 class="col-md-12">Khuyến mại: <span style="float:right">10000đ</span></h4>
                    <div class="form-group col-md-12">
                        <label for="discount" style="margin-top:10px">Mã khuyến mại</label>
                        <input type="text" class="form-control" id="discount">
                    </div>
                    <div class="form-group col-md-12">
                        <label class="col-md-12" style="text-align:center; margin-bottom:10px">Phương thức thanh toán</label>
                        <div class="col-md-4"><img src="~/Public/img/installment.svg" alt="Installment"></div>
                        <div class="col-md-4"><img src="~/Public/img/jcb.svg" alt="SHB"></div>
                        <div class="col-md-4"><img src="~/Public/img/mastercard.svg" alt="Mastercard"></div>
                        <div class="col-md-4"><img src="~/Public/img/visa.svg" alt="VISA"></div>
                        <div class="col-md-4"><img src="~/Public/img/internet-banking.svg" alt="Internet Banking"></div>
                        <div class="col-md-4"><img src="~/Public/img/cash.svg" alt="Cash"></div>
                    </div>
                    <button type="button" class="btn btn-primary col-md-11 btn-checkout">Checkout</button>
                </li>
            </ul>

        </article>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/dirPagination.js"></script>
    <script src="~/Scripts/Controller/CartController.js"></script>
</body>
</html>
